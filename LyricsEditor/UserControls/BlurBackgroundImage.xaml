<UserControl
    x:Class="LyricsEditor.UserControls.BlurBackgroundImage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:local="using:LyricsEditor.UserControls"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:behaviors="using:Microsoft.Toolkit.Uwp.UI.Animations.Behaviors"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d" Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <Storyboard x:Name="FadeIn_Storyboard">
            <DoubleAnimation Storyboard.TargetName="image" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.5"/>
        </Storyboard>
        <Storyboard x:Name="FadeOut_Storyboard" Completed="FadeOut_Storyboard_Completed">
            <DoubleAnimation Storyboard.TargetName="image" Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="0:0:0.5"/>
        </Storyboard>
    </UserControl.Resources>

    <Image x:Name="image" Stretch="UniformToFill">
        <interactivity:Interaction.Behaviors>
            <behaviors:Blur Value="{x:Bind settings.BackgroundBlurDegree,Mode=OneWay}" Duration="0" AutomaticallyStart="True"/>
        </interactivity:Interaction.Behaviors>
    </Image>
</UserControl>
