<UserControl
    x:Class="LyricsEditor.UserControls.BlurBackgroundImage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <!--
        // we should delete some namespaces
        xmlns:local="using:LyricsEditor.UserControls"
        xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
        xmlns:behaviors="using:Microsoft.Toolkit.Uwp.UI.Animations.Behaviors"
    -->
    <Image
        Name="image"
        Source="{x:Bind settings.BackgroundImage, Mode=OneWay}"
        Stretch="UniformToFill">
        <!--<interactivity:Interaction.Behaviors>
            <behaviors:Blur Value="{x:Bind settings.BackgroundBlurDegree,Mode=OneWay}" Duration="0" AutomaticallyStart="True"/>
        </interactivity:Interaction.Behaviors>-->
    </Image>
</UserControl>
