<UserControl
    x:Class="LyricsEditor.Templates.LyricItemTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LyricsEditor.Templates"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
        <TextBlock Text="{x:Bind lyric.Time,Mode=OneWay,Converter={StaticResource timeSpenToString}}" Margin="5,0"/>
        <TextBlock Text="{x:Bind lyric.Content,Mode=OneWay}" Margin="5,0"/>
    </StackPanel>
</UserControl>
