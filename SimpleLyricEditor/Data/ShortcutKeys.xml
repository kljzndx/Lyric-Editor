<?xml version="1.0" encoding="utf-8" ?> 
<ShortcutKeys>
  
  <ShortcutKey Name="输入框内加歌词" Class="歌词操作">
    <Condition>
      <en_US>press Ctrl + Enter In Lyric input box</en_US>
      <zh_CN>在歌词输入框内按 Ctrl + Enter</zh_CN>
    </Condition>
    <Function>
      <en_US>Add Lyric</en_US>
      <zh_CN>添加歌词</zh_CN>
    </Function>
  </ShortcutKey>

  <ShortcutKey Name="空格加歌词" Class="歌词操作">
    <Condition>
      <en_US>Press spacebar when there are no selected items</en_US>
      <zh_CN>无选中项时按空格</zh_CN>
    </Condition>
    <Function>
      <en_US>Add Lyric</en_US>
      <zh_CN>添加歌词</zh_CN>
    </Function>
  </ShortcutKey>

  <ShortcutKey Name="往上添加歌词" Class="歌词操作">
    <Condition>
      <en_US>Press SHIFT while executing add lyrics command</en_US>
      <zh_CN>按住 shift 时执行添加歌词命令</zh_CN>
    </Condition>
    <Function>
      <en_US>Add Lyrics to Above</en_US>
      <zh_CN>往上添加歌词</zh_CN>
    </Function>
  </ShortcutKey>

  <ShortcutKey Name="复制歌词" Class="歌词操作">
    <Condition>
      <en_US>Press C Key</en_US>
      <zh_CN>按 C 键</zh_CN>
    </Condition>
    <Function>
      <en_US>Copy Lyric</en_US>
      <zh_CN>复制歌词</zh_CN>
    </Function>
  </ShortcutKey>

  <ShortcutKey Name="修改时间" Class="歌词操作">
    <Condition>
      <en_US>Press spacebar when there are selected items</en_US>
      <zh_CN>有选中项时按空格</zh_CN>
    </Condition>
    <Function>
      <en_US>Modifications to the current time</en_US>
      <zh_CN>修改为当前时间</zh_CN>
    </Function>
  </ShortcutKey>

  <ShortcutKey Name="修改歌词" Class="歌词操作">
    <Condition>
      <en_US>press Enter In Lyric input box</en_US>
      <zh_CN>在歌词输入框内按回车键</zh_CN>
    </Condition>
    <Function>
      <en_US>Modifications to the current lyric</en_US>
      <zh_CN>修改为当前歌词</zh_CN>
    </Function>
  </ShortcutKey>

  <ShortcutKey Name="删除歌词" Class="歌词操作">
    <Condition>
      <en_US>Press delete when there are selected items</en_US>
      <zh_CN>有选中项时按删除键</zh_CN>
    </Condition>
    <Function>
      <en_US>Delete Selected Lyrics</en_US>
      <zh_CN>删除选中的歌词</zh_CN>
    </Function>
  </ShortcutKey>

  <ShortcutKey Name="清空歌词" Class="歌词操作">
    <Condition>
      <en_US>Press Shift + Delete</en_US>
      <zh_CN>按Shift + 删除键</zh_CN>
    </Condition>
    <Function>
      <en_US>Clear Lyrics List and Create a New File</en_US>
      <zh_CN>清空歌词列表并新建文件</zh_CN>
    </Function>
  </ShortcutKey>

  <ShortcutKey Name="切换歌词" Class="歌词操作">
    <Condition>
      <en_US>Press Up / Down Arrow Key</en_US>
      <zh_CN>按 上/下 方向键</zh_CN>
    </Condition>
    <Function>
      <en_US>Switch Lyric Item Select</en_US>
      <zh_CN>切换歌词项选择</zh_CN>
    </Function>
  </ShortcutKey>

  <ShortcutKey Name="歌词排序" Class="歌词操作">
    <Condition>
      <en_US>Press S Key</en_US>
      <zh_CN>按 S 键</zh_CN>
    </Condition>
    <Function>
      <en_US>Lyrics List Sort</en_US>
      <zh_CN>歌词列表排序</zh_CN>
    </Function>
  </ShortcutKey>

  <ShortcutKey Name="跳转到所选歌词项的时间上" Class="歌词操作">
    <Condition>
      <en_US>Press G Key</en_US>
      <zh_CN>按 G 键</zh_CN>
    </Condition>
    <Function>
      <en_US>Go to the time of the selected lyric</en_US>
      <zh_CN>跳转到所选歌词项的时间上</zh_CN>
    </Function>
  </ShortcutKey>

  <ShortcutKey Name="播放控制" Class="播放器操作">
    <Condition>
      <en_US>Press P Key</en_US>
      <zh_CN>按 P 键</zh_CN>
    </Condition>
    <Function>
      <en_US>Play / Pause</en_US>
      <zh_CN>播放/暂停</zh_CN>
    </Function>
  </ShortcutKey>

  <ShortcutKey Name="快进快退半秒" Class="播放器操作">
    <Condition>
      <en_US>Left / Right Arrow Key</en_US>
      <zh_CN>左/右 方向键</zh_CN>
    </Condition>
    <Function>
      <en_US>Fast Back / Fast Forward 500ms</en_US>
      <zh_CN>快退/快进 500毫秒</zh_CN>
    </Function>
  </ShortcutKey>

  <ShortcutKey Name="快进快退5秒" Class="播放器操作">
    <Condition>
      <en_US>Shift + Left / Right Arrow Key</en_US>
      <zh_CN>Shift + 左/右 方向键</zh_CN>
    </Condition>
    <Function>
      <en_US>Fast Back / Fast Forward 5s</en_US>
      <zh_CN>快退/快进 5秒</zh_CN>
    </Function>
  </ShortcutKey>

  <ShortcutKey Name="新建文件" Class="文件操作">
    <Condition>
      <en_US>Press Shift + Delete</en_US>
      <zh_CN>按Shift + 删除键</zh_CN>
    </Condition>
    <Function>
      <en_US>New File</en_US>
      <zh_CN>新建文件</zh_CN>
    </Function>
  </ShortcutKey>

  <ShortcutKey Name="打开音乐" Class="文件操作">
    <Condition>
      <en_US>Ctrl + M</en_US>
      <zh_CN>Ctrl + M</zh_CN>
    </Condition>
    <Function>
      <en_US>Open Music</en_US>
      <zh_CN>打开音乐</zh_CN>
    </Function>
  </ShortcutKey>

  <ShortcutKey Name="打开歌词" Class="文件操作">
    <Condition>
      <en_US>Ctrl + L</en_US>
      <zh_CN>Ctrl + L</zh_CN>
    </Condition>
    <Function>
      <en_US>Open Lyric</en_US>
      <zh_CN>打开歌词</zh_CN>
    </Function>
  </ShortcutKey>

  <ShortcutKey Name="保存歌词" Class="文件操作">
    <Condition>
      <en_US>Ctrl + S</en_US>
      <zh_CN>Ctrl + S</zh_CN>
    </Condition>
    <Function>
      <en_US>Save Lyric</en_US>
      <zh_CN>保存歌词</zh_CN>
    </Function>
  </ShortcutKey>

  <ShortcutKey Name="另存为歌词" Class="文件操作">
    <Condition>
      <en_US>Ctrl + Shift + S</en_US>
      <zh_CN>Ctrl + Shift + S</zh_CN>
    </Condition>
    <Function>
      <en_US>Save as Lyric</en_US>
      <zh_CN>另存为歌词</zh_CN>
    </Function>
  </ShortcutKey>

</ShortcutKeys>